#include <stdio.h>
int main() {
    int arr[100], n, i;
    float sum = 0, avg;
    int *p = arr;

    printf("Enter size: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        scanf("%d", p + i);
        sum += *(p + i);
    }

    avg = sum / n;
    printf("Average = %.2f", avg);
    return 0;
}
